Vagrant.configure("2") do |config|
  <% (1..num_agents.to_i).each do |i| %>
    config.vm.define "agent<%= i %>" do |agent<%= i %>|
      agent<%= i %>.vm.box = "ubuntu/jammy64"
      agent<%= i %>.vm.disk :disk, size: "<%= disk_size %>GB", primary: true
      agent<%= i %>.vm.network :private_network, ip: "192.168.56.<%= base_ip.to_i + (i-1)*10 %>"
      agent<%= i %>.vm.provider "virtualbox" do |vb|
        vb.memory = "<%= memory %>"
      end
      agent<%= i %>.vm.hostname = "agent<%= i %>"
      agent<%= i %>.vm.provision "shell", inline: <<-SHELL
      apt-get -y update
      apt-get -y upgrade
      apt-get install -y gcc make git curl jq net-tools docker.io docker-compose-v2
      sudo tee /etc/rsyslog.d/60-custom-forwarding.conf > /dev/null <<EOF
template(name="MyCustomTemplate" type="string" string="<%%PRI%>%TIMESTAMP% %HOSTNAME% %syslogtag% %msg%\\n")
*.* action(type="omfwd" target="192.168.56.<%= base_ip.to_i + (i-1)*10 %>" port="32150" protocol="tcp" template="MyCustomTemplate")
EOF
      sudo systemctl restart rsyslog
      touch agent-install.crt
      export HZN_ORG_ID=<%= hzn_org_id %>
      export HZN_EXCHANGE_USER_AUTH=<%= hzn_exchange_user_auth %>
      export HZN_EXCHANGE_URL=http://192.168.56.10:3090/v1
      export HZN_FSS_CSSURL=http://192.168.56.10:9443/
      export HZN_AGBOT_URL=http://192.168.56.10:3111
      export HZN_FDO_SVC_URL=http://192.168.56.10:9008/api
      echo "HZN_ORG_ID=<%= hzn_org_id %>" > agent-install.cfg
      echo "HZN_EXCHANGE_USER_AUTH=<%= hzn_exchange_user_auth %>" >> agent-install.cfg
      echo "HZN_EXCHANGE_URL=http://192.168.56.10:3090/v1" >> agent-install.cfg
      echo "HZN_FSS_CSSURL=http://192.168.56.10:9443/" >> agent-install.cfg
      echo "HZN_AGBOT_URL=http://192.168.56.10:3111" >> agent-install.cfg
      echo "HZN_FDO_SVC_URL=http://192.168.56.10:9008/api" >> agent-install.cfg
      export $(cat agent-install.cfg)
      echo '{
    "properties": [
                {
                        "name": "openhorizon.allowPrivileged",
                        "value": true
                },
                {
                        "name": "purpose",
                        "value": "edgelake"
                }
],
        "constraints": []
}' > node.policy.json
      curl -sSL https://raw.githubusercontent.com/open-horizon/anax/refs/heads/master/agent-install/agent-install.sh | bash -s -- -i anax: -k ./agent-install.cfg -c css: -n node.policy.json -T 120
      sleep 120

      # clone service-edgelake-federated-learning and publish services and policies
      git clone -b fix_arch_dep_serv https://github.com/t-fine/service-edgelake-federated-learning.git

      wget https://raw.githubusercontent.com/AnyLog-co/Sample-Data-Generator/refs/heads/os-dev/docker_insight.py
      sudo python3 docker_insight.py 192.168.56.<%= base_ip.to_i + (i-1)*10 %>:32149 --db-name new_company --table-name docker_insight --wait 0.5 &
      SHELL
    end
  <% end %>
end 
